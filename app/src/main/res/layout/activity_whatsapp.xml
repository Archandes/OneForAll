<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".whatsapp">

    <Button
        android:id="@+id/launch_whatsapp"
        android:layout_width="307dp"
        android:layout_height="52dp"
        android:background="@drawable/button1"
        android:text="WA"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button1"
        android:onClick="home"
        android:text="Home"
        app:layout_constraintEnd_toEndOf="@+id/launch_whatsapp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/launch_whatsapp"
        app:layout_constraintTop_toBottomOf="@+id/launch_whatsapp" />


</androidx.constraintlayout.widget.ConstraintLayout>